{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debugger: Remote Attach",
            "justMyCode": false, // Added to get debugger working, but also debugs library modules
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "0.0.0.0",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/app"
                }
            ]
        }
    ]
}